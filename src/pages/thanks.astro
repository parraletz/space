---
import BaseLayout from '../layouts/BaseLayout.astro'
import { getCurrentLanguage } from '../i18n/utils'

const currentLang = getCurrentLanguage(Astro.url)
const isSpanish = currentLang === 'es'

// Contenido según el idioma
const content = {
  title: isSpanish ? '¡Gracias!' : 'Thank You!',
  subtitle: isSpanish
    ? 'Tu mensaje ha sido enviado'
    : 'Your message has been sent',
  funnyMessage: isSpanish
    ? '¡Tu mensaje viaja ahora a la velocidad de la luz a través del ciberespacio! Bueno, quizás no tan rápido, pero pronto llegará a mi bandeja de entrada.'
    : 'Your message is now traveling at the speed of light through cyberspace! Well, maybe not that fast, but it will soon reach my inbox.',
  additionalJoke: isSpanish
    ? 'Mientras tanto, aquí hay un dato curioso: si imprimes todos los correos electrónicos enviados en un día, podrías cubrir 40,000 árboles. ¡Por suerte estamos usando Internet!'
    : "Meanwhile, here's a fun fact: if you printed all emails sent in one day, you could cover 40,000 trees. Thankfully we're using the Internet!",
  homeLink: isSpanish ? 'Volver al inicio' : 'Back to home',
  seo: {
    title: isSpanish ? 'Gracias por tu mensaje' : 'Thanks for your message',
    description: isSpanish
      ? 'Tu mensaje ha sido enviado correctamente. ¡Gracias por contactarme!'
      : 'Your message has been sent successfully. Thanks for reaching out!'
  }
}
---

<BaseLayout title={content.seo.title} description={content.seo.description}>
  <div class='flex flex-col items-center justify-center py-16 text-center'>
    <h1 class='text-4xl sm:text-5xl font-serif font-medium mb-4'>
      {content.title}
    </h1>
    <h2 class='text-2xl sm:text-3xl mb-8'>{content.subtitle}</h2>

    <div class='max-w-xl mx-auto mb-8'>
      <p class='text-lg mb-6'>{content.funnyMessage}</p>
      <p class='text-lg italic'>{content.additionalJoke}</p>
    </div>

    <div class='mt-12'>
      <a
        href='/'
        class='inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:bg-indigo-500 dark:hover:bg-indigo-400'
      >
        {content.homeLink}
      </a>
    </div>

    <!-- Imagen divertida de papel avión o mensaje -->
    <div class='mt-16'>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        width='120'
        height='120'
        viewBox='0 0 24 24'
        fill='none'
        stroke='currentColor'
        stroke-width='2'
        stroke-linecap='round'
        stroke-linejoin='round'
        class='mx-auto animate-bounce'
      >
        <path
          d='M21 5L2 12.5L9 13.5M21 5L18.5 20L9 13.5M21 5L9 13.5M9 13.5V19L12.2488 15.7229'
        ></path>
      </svg>
    </div>
  </div>
</BaseLayout>

